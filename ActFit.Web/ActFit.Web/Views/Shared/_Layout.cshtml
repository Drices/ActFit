<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ACTF!Tsilver", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a class="scroll-link" href="#top-content">Top</a></li>
                    <li><a class="scroll-link" href="#products">Products</a></li>
                    <li><a class="scroll-link" href="#shop">Shop</a></li>
                    <li><a class="scroll-link" href="#about">About</a></li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 footer-copyright">
                        <p>&copy; @DateTime.Now.Year - ACTF!Tsilver</p>
                    </div>
                    <div class="col-sm-6 footer-social">
                        <a class="social-slide social-facebook" href="https://www.facebook.com/"></a>
                        <a class="social-slide social-google" href="https://plus.google.com/"></a>
                        <a class="social-slide social-instagram" href="http://instagram.com/mauricejungmann/"></a>
                    </div>
                </div>
            </div>
        </footer>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/wow")
    @RenderSection("scripts", required: false)
</body>
</html>
